{
  "Sass Breakpoint Extra Large": {
    "prefix": "@xl",
    "body": ["@include breakpoint(up,xl) {", "\t$0", "}"],
    "description": "Sass Large Breakpoint"
  },

  "Sass Breakpoint large": {
    "prefix": "@lg",
    "body": ["@include breakpoint(up,lg) {", "\t$0", "}"],
    "description": "Sass Large Breakpoint"
  },
  "Sass Breakpoint medium": {
    "prefix": "@md",
    "body": ["@include breakpoint(up,md) {", "\t$0", "}"],
    "description": "Sass Medium Breakpoint"
  },
  "Sass Breakpoint small": {
    "prefix": "@sm",
    "body": ["@include breakpoint(up,sm) {", "\t$0", "}"],
    "description": "Sass Small Breakpoint"
  },
  "Sass Dynamic Breakpoint": {
    "prefix": "@inc",
    "body": ["@include breakpoint(${1:pos}, ${2:size}) {", "", "}"]
  },

  "Sass Media Extra Large": {
    "prefix": "xldesktop",
    "body": ["@include media('>=xl-desktop') {", "\t$0", "}"],
    "description": "Sass XL Media"
  },

  "Sass Media Large Desktop": {
    "prefix": "lgdesktop",
    "body": ["@include media('>=lg-desktop') {", "\t$0", "}"],
    "description": "Sass Large Media"
  },

  "Sass Media large": {
    "prefix": "desktop",
    "body": ["@include media('>=desktop') {", "\t$0", "}"],
    "description": "Sass Large Media"
  },
  "Sass Media medium": {
    "prefix": "tablet",
    "body": ["@include media('>=tablet') {", "\t$0", "}"],
    "description": "Sass Media Media"
  },
  "Sass Media small": {
    "prefix": "mobile",
    "body": ["@include media('>=mobile') {", "\t$0", "}"],
    "description": "Sass Small Media"
  },
  "Sass Dynamic Media": {
    "prefix": "media",
    "body": ["@include media('${1:pos}${2:size}') {", "${3:}", "}"]
  },
  "@media (min-width:": {
    "prefix": "@media",
    "body": ["@media (min-width: ${1}px) {", "$2", "}"],
    "description": "Media Query"
  },
  "@media (min-width:1024": {
    "prefix": "@desktop",
    "body": ["@media (min-width: 1024px) {", "$1", "}"],
    "description": "Media Query"
  },
  "Background": {
    "prefix": "bg",
    "body": [
      "background-size: cover;",
      "background-position: center;",
      "background-repeat: no-repeat;"
    ]
  },
  "Comment Template": {
    "prefix": "//",
    "body": [
      "/////////////////////////////////////////////////////////////////////////",
      "//// $1"
    ],
    "description": "comment"
  }
}
